            <argument type="service" id="setono_sylius_gift_card.repository.gift_card_code" />
            <argument type="service" id="setono_sylius_gift_card.resolver.gift_card" />
        </service>

        <service id="setono_sylius_gift_card.behat.context.ui.shop.cart" class="Tests\Setono\SyliusGiftCardPlugin\Behat\Context\Ui\Shop\CartContext">
