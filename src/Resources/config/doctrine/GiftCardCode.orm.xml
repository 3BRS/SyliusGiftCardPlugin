<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Setono\SyliusGiftCardPlugin\Entity\GiftCardCode" table="setono_gift_card_code">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="code" column="code" type="string" unique="true"/>

        <many-to-one field="giftCard" target-entity="Setono\SyliusGiftCardPlugin\Entity\GiftCardInterface" inversed-by="giftCardCodes">
            <join-column name="gift_card_id" referenced-column-name="id" nullable="false" />
        </many-to-one>

        <many-to-one field="order" target-entity="Sylius\Component\Order\Model\OrderInterface">
            <join-column name="order_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
