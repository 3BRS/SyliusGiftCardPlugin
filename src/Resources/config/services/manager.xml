           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="setono_sylius_gift_card.manager.gift_card"
                 class="Setono\SyliusGiftCardPlugin\Manager\GiftCardManager" public="true">
